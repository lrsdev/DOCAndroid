<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="8dp"
              android:background="@color/windowBackground">

    <!-- Page Heading -->
    <TextView
        android:id="@+id/reportHeaderTextView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Sighting Details"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <!-- Location Label -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/reportLocationSpinner"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            app:ms_hint="Select a location"
            app:ms_floatingLabelText="Location"
            app:ms_floatingLabelColor="@color/accentColor"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/reportWildlifeTypeSpinner"
            android:layout_width="match_parent"
            app:ms_hint="Select a species"
            app:ms_floatingLabelText="Species"
            app:ms_floatingLabelColor="@color/accentColor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reportNotesTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/reportNotesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/reportWildlifeTextView"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:text="Wildlife Type: "
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/reportNotesTextView"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:text="Notes : "
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        />

    <ImageButton
        android:id="@+id/reportPhotoButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/windowBackground"
        android:src="@drawable/camera"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/reportSubmitButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/windowBackground"
        android:src="@drawable/upload"
        android:layout_marginBottom="16dp" />


    <ImageButton
        android:id="@+id/reportClearButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/windowBackground"
        android:src="@drawable/trash"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/image_placeholder"
        android:id="@+id/reportThumbImageView"
        android:layout_below="@+id/reportNotesEditText"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="81dp"/>

</LinearLayout>
